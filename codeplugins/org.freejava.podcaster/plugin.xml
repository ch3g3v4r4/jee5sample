<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <category
            name="FreeJava Tools Category"
            id="org.freejava.podcaster.commands.category">
      </category>
      <command
            categoryId="org.freejava.podcaster.commands.category"
            id="org.freejava.podcaster.commands.podcastCommand"
            name="Play Podcasts">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.freejava.podcaster.ui.PodcastHandler"
            commandId="org.freejava.podcaster.commands.podcastCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
            <command
                  commandId="org.freejava.podcaster.commands.podcastCommand"
                  id="org.freejava.podcaster.menus.podcastCommand">
            </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.freejava.podcaster.ui.Perspective"
            id="org.freejava.podcaster.perspective"
            name="Podcast Perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.freejava.podcaster.perspective">
         <view
               id="org.freejava.podcaster.podcastTree"
               minimized="false"
               ratio="0.5"
               relationship="left"
               relative="org.eclipse.ui.editorss">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="org.freejava.podcaster.category"
            name="Podcast Category">
      </category>
      <view
            category="org.freejava.podcaster.category"
            class="org.freejava.podcaster.ui.PodcastTreeView"
            icon="icons/sample.gif"
            id="org.freejava.podcaster.podcastTree"
            name="Podcast Tree View">
      </view>
   </extension>

</plugin>
