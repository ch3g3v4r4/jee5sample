<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="org.freejava.sampleapp.Application">
         </run>
      </application>
   </extension>

   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="org.freejava.sampleapp.Perspective"
            id="org.freejava.sampleapp.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="View"
            class="org.freejava.sampleapp.View"
            id="org.freejava.sampleapp.view">
      </view>
      <view
            class="org.freejava.sampleapp.BrowserView"
            id="org.freejava.sampleapp.browserview"
            name="View">
      </view>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.freejava.sampleapphtml.ui.application"
            name="Sample Application">
         <property
               name="windowImages"
               value="icons/alt_window_16.gif,icons/alt_window_32.gif">
         </property>
         <property
               name="appName"
               value="Sample Application">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.equinox.http.registry.resources">
      <resource
            alias="/ui"
            base-name="/ui">
      </resource>
   </extension>
  <extension point="org.eclipse.equinox.http.registry.servlets">
    <servlet
      alias="/service"
      class="org.freejava.sampleapp.ServiceServlet"/>
    <servlet
          alias="/jersey-http-service"
          class="com.sun.jersey.spi.container.servlet.ServletContainer">
       <init-param
             name="javax.ws.rs.Application"
             value="org.freejava.sampleapp.JerseyApplication">
       </init-param>
    </servlet>
  </extension>
</plugin>
