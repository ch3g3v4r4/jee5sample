<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            name="FreeJava Tools Category"
            id="org.freejava.tools.commands.category">
      </category>
      <command
            name="New Maven Project"
            categoryId="org.freejava.tools.commands.category"
            id="org.freejava.tools.commands.newProjectCommand">
      </command>
      <command
            name="Install Useful Plugins"
            categoryId="org.freejava.tools.commands.category"
            id="org.freejava.tools.commands.installPluginsCommand">
      </command>
      <command
            categoryId="org.freejava.tools.commands.category"
            id="org.freejava.tools.commands.codeSearchCommand"
            name="Java Examples Seach">
      </command>
      <command
            categoryId="org.freejava.tools.commands.category"
            id="org.freejava.tools.commands.viewPackageDependencyCommand"
            name="View Package Dependency">
      </command>
      <command
            categoryId="org.freejava.tools.commands.category"
            id="org.freejava.tools.commands.viewClassDependencyCommand"
            name="View Class Dependency">
      </command>

   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="org.freejava.tools.commands.newProjectCommand"
            class="org.freejava.tools.handlers.NewProjectHandler">
      </handler>
      <handler
            commandId="org.freejava.tools.commands.installPluginsCommand"
            class="org.freejava.tools.handlers.InstallPluginsHandler">
      </handler>
      <handler
            class="org.freejava.tools.handlers.SampleCodeSearchHandler"
            commandId="org.freejava.tools.commands.codeSearchCommand">
      </handler>
      <handler
            class="org.freejava.tools.handlers.ViewDependencyHandler"
            commandId="org.freejava.tools.commands.viewPackageDependencyCommand">
		<enabledWhen>
		  <with variable="selection">
		    <iterate ifEmpty="false" operator="or">
		      <or>
		        <instanceof value="org.eclipse.jdt.core.IPackageFragment"></instanceof>
		        <instanceof value="org.eclipse.jdt.core.IPackageFragmentRoot"></instanceof>
		        <instanceof value="org.eclipse.jdt.core.IJavaProject"></instanceof>
		      </or>
		    </iterate>
		  </with>
		</enabledWhen>
      </handler>
      <handler
            class="org.freejava.tools.handlers.ViewDependencyHandler"
            commandId="org.freejava.tools.commands.viewClassDependencyCommand">
		<enabledWhen>
		  <with variable="selection">
		    <iterate ifEmpty="false" operator="or">
		      <or>
		        <instanceof value="org.eclipse.jdt.core.ICompilationUnit"></instanceof>
		        <instanceof value="org.eclipse.jdt.core.IPackageFragment"></instanceof>
		        <instanceof value="org.eclipse.jdt.core.IPackageFragmentRoot"></instanceof>
		        <instanceof value="org.eclipse.jdt.core.IJavaProject"></instanceof>
		      </or>
		    </iterate>
		  </with>
		</enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               label="FreeJava Tools"
               mnemonic="M"
               id="org.freejava.tools.menus.freeJavaToolsMenu">
            <command
                  commandId="org.freejava.tools.commands.newProjectCommand"
                  id="org.freejava.tools.menus.newProjectCommand">
            </command>
            <command
                  commandId="org.freejava.tools.commands.installPluginsCommand"
                  id="org.freejava.tools.menus.installPluginsCommand">
            </command>
            <command
                  commandId="org.freejava.tools.commands.codeSearchCommand"
                  id="org.freejava.tools.commands.codeSearchCommand">
            </command>
         </menu>
      </menuContribution>
   	  <menuContribution locationURI="popup:org.eclipse.ui.popup.any?after=additions">
     		<command commandId="org.freejava.tools.commands.viewPackageDependencyCommand"/>
   	  </menuContribution>
   	  <menuContribution locationURI="popup:org.eclipse.ui.popup.any?after=additions">
     		<command commandId="org.freejava.tools.commands.viewClassDependencyCommand"/>
   	  </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="org.freejava.tools.category"
            name="FreeJava Tools">
      </category>
      <view category="org.freejava.tools.category"
            class="org.freejava.tools.handlers.dependency.DependencyView"
            icon="icons/sample.gif"
            id="org.freejava.tools.dependency"
            name="Dependency View">
      </view>
   </extension>
</plugin>
